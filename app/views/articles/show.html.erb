<!-- app/views/articles/show.html.erb -->
<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @article.description %>
</p>

<p>
  <strong>Body:</strong>
  <%= render @content.body %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %> |
<td><%= link_to 'destroy', article_path(@article),data: {turbo_method: 'delete', turbo_confirm: 'Are you sure?' }%></td></tr>
